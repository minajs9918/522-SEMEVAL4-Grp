#load tm package
library(tm)

#Create Corpus from .txt
myCorpus <-Corpus(DirSource("D:/BackUp Mr.Wai/BAckup 20.07.2018/Documents/Operadownload/SEM 3-CODE_CDS_ 522/522-SEMEVAL4-Grp/522_GrpSEMEVAL_site/R/groundedemotionTextMining"))

#View Corpus Information
myCorpus
summary(myCorpus)

#inspect a particular document
writeLines(as.character(myCorpus[[3]]))

#remove ������ what would be emojis
myCorpus<-tm_map(myCorpus, content_transformer(gsub), pattern="\\W",replace=" ")
# remove URLs
function(x)
{gsub("http[[:alnum:][:punct:]]*",'', x)
  gsub('http\\S+\\s*', '', x) ## Remove URLs
  gsub('\\b+RT', '', x) ## Remove RT
  gsub('@\\S+', '', x) ## Remove Mentions
  gsub('[[:cntrl:]]', '', x) ## Remove Controls and special characters
  gsub("\\d", '', x) ## Remove Controls and special characters
}
#inspect a particular document (e.g. the 1st doc)
writeLines(as.character(myCorpus[[3]]))